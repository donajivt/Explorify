@{
    ViewData["Title"] = "Explorify - Captura, Comparte, Inspira";
}

@section Meta {
    <meta name="description" content="Descarga Explorify y comparte tus aventuras. Una foto, una historia.">
    <meta name="keywords" content="explorify, viajes, fotografía, aventuras">
    <meta property="og:title" content="Explorify - Captura, Comparte, Inspira">
    <meta property="og:description" content="La app de fotografía para compartir tus aventuras">
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Outfit:wght@400;600;700;800&display=swap" rel="stylesheet">
    
    <!-- CSS Files -->
    <link rel="stylesheet" href="~/css/design-system.css">
    <link rel="stylesheet" href="~/css/landing.css">

    <style>
        /* ANIMACIÓN SUAVE PARA EL BOTÓN */
        @@keyframes pulseGlow {
            0%

        {
            transform: scale(1);
            box-shadow: 0 0 0 rgba(89, 201, 149, 0.6);
        }

        50% {
            transform: scale(1.06);
            box-shadow: 0 0 20px rgba(89, 201, 149, 0.7);
        }

        100% {
            transform: scale(1);
            box-shadow: 0 0 0 rgba(89, 201, 149, 0.6);
        }

        }

        /* BOTÓN MÁS GRANDE, REDONDO Y LLAMATIVO */
        .download-btn {
            display: flex;
            align-items: center;
            gap: 14px;
            padding: 18px 32px;
            background: linear-gradient(135deg, #4CAF8F, #6FD8A9);
            color: white;
            border-radius: 18px;
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            font-size: 1.2rem;
            letter-spacing: 0.5px;
            transition: transform .3s ease, box-shadow .3s ease;
            animation: pulseGlow 3s infinite;
            border: none;
            text-decoration: none;
        }

            .download-btn:hover {
                transform: scale(1.12);
                box-shadow: 0 8px 25px rgba(79, 189, 140, 0.65);
            }

        .btn-icon svg {
            width: 36px;
            height: 36px;
        }

        .btn-text .btn-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        .btn-text .btn-store {
            font-size: 1.35rem;
            font-weight: 800;
            letter-spacing: 1px;
        }
        /* Override body to prevent any scroll */
        body {
            overflow: hidden !important;
            height: 100vh;
            width: 100vw;
        }
    </style>
</head>
<body>
    <!-- Hero Section Única -->
    <section class="hero">
        <!-- Background Decorativo -->
        <div class="hero-background">
            <div class="grid-pattern"></div>
            <div class="circle-decoration large"></div>
            <div class="circle-decoration medium"></div>
            <div class="circle-decoration small"></div>
        </div>
        
        <!-- Imágenes Decorativas -->
        <div class="decorative-images">
            <img src="~/img/decor1.jpg" 
                 alt="Naturaleza" 
                 class="decor-img top-left"
                 onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22200%22 height=%22200%22%3E%3Cdefs%3E%3ClinearGradient id=%22g1%22 x1=%220%25%22 y1=%220%25%22 x2=%22100%25%22 y2=%22100%25%22%3E%3Cstop offset=%220%25%22 style=%22stop-color:%235FB07D%22/%3E%3Cstop offset=%22100%25%22 style=%22stop-color:%237BC99C%22/%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width=%22200%22 height=%22200%22 fill=%22url(%23g1)%22 rx=%2220%22/%3E%3C/svg%3E'">
            
            <img src="~/img/decor2.jpg" 
                 alt="Aventura" 
                 class="decor-img top-right"
                 onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22200%22 height=%22200%22%3E%3Cdefs%3E%3ClinearGradient id=%22g2%22 x1=%220%25%22 y1=%220%25%22 x2=%22100%25%22 y2=%22100%25%22%3E%3Cstop offset=%220%25%22 style=%22stop-color:%233A5A40%22/%3E%3Cstop offset=%22100%25%22 style=%22stop-color:%23588157%22/%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width=%22200%22 height=%22200%22 fill=%22url(%23g2)%22 rx=%2220%22/%3E%3C/svg%3E'">
            
            <img src="~/img/decor3.jpg" 
                 alt="Explorar" 
                 class="decor-img bottom-left"
                 onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22200%22 height=%22200%22%3E%3Cdefs%3E%3ClinearGradient id=%22g3%22 x1=%220%25%22 y1=%220%25%22 x2=%22100%25%22 y2=%22100%25%22%3E%3Cstop offset=%220%25%22 style=%22stop-color:%23A3B18A%22/%3E%3Cstop offset=%22100%25%22 style=%22stop-color:%23DAD7CD%22/%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width=%22200%22 height=%22200%22 fill=%22url(%23g3)%22 rx=%2220%22/%3E%3C/svg%3E'">
            
            <img src="~/img/decor4.jpg" 
                 alt="Viaje" 
                 class="decor-img bottom-right"
                 onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22200%22 height=%22200%22%3E%3Cdefs%3E%3ClinearGradient id=%22g4%22 x1=%220%25%22 y1=%220%25%22 x2=%22100%25%22 y2=%22100%25%22%3E%3Cstop offset=%220%25%22 style=%22stop-color:%237BC99C%22/%3E%3Cstop offset=%22100%25%22 style=%22stop-color:%235FB07D%22/%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width=%22220%22 height=%22220%22 fill=%22url(%23g4)%22 rx=%2220%22/%3E%3C/svg%3E'">
        </div>
        
        <!-- Contenido Principal -->
        <div class="hero-content">
            <!-- Logo -->
            <img src="~/img/Explori.png" alt="Explorify" class="hero-logo">
            
            <!-- Título -->
            <h1 class="hero-title">
                Captura, <span class="highlight">Comparte</span>, Inspira
            </h1>
            
            <!-- Subtítulo -->
            <p class="hero-subtitle">
                Una foto a la vez. Comparte tus aventuras con el mundo 
                y descubre historias increíbles de exploradores como tú.
            </p>
            
            <!-- Botones de Descarga -->
            <div class="download-section">
                <a href="https://play.google.com/store/apps/details?id=com.explorify.explorifyapp" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="download-btn">
                    <div class="btn-icon">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.5,12.92 20.16,13.19L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                        </svg>
                    </div>
                    <div class="btn-text">
                        <span class="btn-label">Descarga en</span>
                        <span class="btn-store">Google Play</span>
                    </div>
                </a>
            </div>
        </div>
        
        <!-- Footer -->
        <footer class="footer">
            <p class="footer-text">
                © 2025 Explorify. Hecho con 💚 por exploradores. 
                <a href="https://explorify.runasp.net/Home/Privacidad">Privacidad</a> ·
                <a href="https://explorify.runasp.net/Home/Terminos">Términos</a> ·
                <a href="https://explorify.runasp.net/Home/Nosotros">Contacto</a>
            </p>
        </footer>
    </section>
</body>
</html>
